@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="~/css/styles.css" rel="stylesheet" />

</head>
<body>
    <section class="ftco-section">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    @* <img src="c:\users\meral_kocak\desktop\bossa\bossaproje\images\bossalogo.png" /> *@

                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(images/bossalogo.png);"></div>
                        <div>
                            <img style="display: block; margin: auto;" src="~/images/bossalogo.png" />
                            <div>
                                @*<img src="~/images/bossalogo.png" align="center" />*@
                                <h3 class="text-center mb-0">Çağrı Takip Sistemi</h3>
                                <p></p>
                                <p class="text-center">Kullanıcı adı ve şifrenizi giriniz.</p>

                                @*<form action="@Url.Action("Login", "Account")" method="post" class="login-form">*@
                                <form action="@Url.Action("LoginCheck", "Cihazlar")" method="post" class="login-form">
                                @*<form action="@Url.Action("Login", "Account")" method="post" class="login-form" asp-asp-controller="Cihazlar" asp-action="v" method="get">*@

                                    <div class="form-group">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-user"></span></div>
                                        @*<input type="text" class="form-control" placeholder="Kullanıcı adı" required>*@
                                        <input type="text" id="uname" name="uname" class="form-control" placeholder="Kullanıcı adı" required>
                                    </div>
                                    <p></p>
                                    <div class="form-group">
                                        <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                        <input type="password" id="pass" name="pass" class="form-control" placeholder="Şifre" required>
                                    </div>
                                    <p></p>
                                    <div class="form-group">
                                        <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriş</button>
                                    </div>
                                </form>

                                @if (TempData["AlertMessage"] != null)
                                {
                                    <script>
                                        alert('@TempData["AlertMessage"]');
                                        @*<p>@ViewBag.ErrorMessage</p>*@

                                    </script>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>

</body>
</html>


